{
  "policy": {
    "policy_id": "daily_crawl_data_management",
    "description": "Manages daily web crawl data. Deletes after 90 days.",
    "default_state": "hot",
    "states": [
      {
        "name": "hot",
        "actions": [],
        "transitions": [
          {
            "state_name": "delete",
            "conditions": {
              "min_index_age": "90d"
            }
          }
        ]
      },
      {
        "name": "delete",
        "actions": [
          {
            "delete": {}
          }
        ],
        "transitions": []
      }
    ],
    "ism_template": [
      {
        "index_patterns": ["documents-*", "chunks-*"],
        "priority": 100
      }
    ]
  }
}
